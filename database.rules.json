{
  "rules": {
    "users": {
      "$uid": {
        "info": {
          ".read": true,
          ".write": "$uid === auth.uid",
          ".validate": "newData.isString()"
        },
        "privileged": {
          ".read": "$uid === auth.uid",
          ".write": "root.child('admin').child(auth.uid)",
          ".validate": "newData.isBoolean()"
        },
        "$others": {
          ".read": false,
          ".write": false
        }
      }
    },
    "admin": {},
    "privilegedUsers": {},
    "posts": {
      ".read": true,
      ".write": "root.child('users').child(auth.uid).child('privileged')",
      "$pid": {
        ".read": true,
        ".write": "if no-Old-Data or user==author || root.child('admin').child(auth.uid)"
      }
    }
  }
}